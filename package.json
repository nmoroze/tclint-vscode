{
    "name": "tclint",
    "displayName": "tclint Language Server",
    "description": "Linting and formatting for Tcl and EDA scripts.",
    "version": "0.1.1",
    "preview": true,
    "serverInfo": {
        "name": "tclint",
        "module": "tclint"
    },
    "publisher": "nmoroze",
    "license": "MIT",
    "homepage": "https://github.com/nmoroze/tclint",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmoroze/tclint-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/nmoroze/tclint/issues"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "tcl",
        "sdc",
        "xdc",
        "eda",
        "fpga"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "icon": "./images/icon.png",
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with tclint."
        }
    },
    "activationEvents": [
        "onLanguage:tcl",
        "onLanguage:sdc",
        "onLanguage:xdc",
        "onLanguage:upf"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "vscode-test",
        "vsce-package": "vsce package"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "tclint.importStrategy": {
                    "default": "useBundled",
                    "description": "Defines where `tclint` is imported from.",
                    "enum": [
                        "useBundled",
                        "fromEnvironment"
                    ],
                    "enumDescriptions": [
                        "Always use the bundled version of `tclint`.",
                        "Use `tclint` from environment, fallback to bundled version only if `tclint` not available in the environment."
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "tclint.interpreter": {
                    "default": [],
                    "description": "When set to the path of a Python executable, extension will use that to launch the server.",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            }
        },
        "commands": [
            {
                "title": "Restart Server",
                "category": "tclint",
                "command": "tclint.restart"
            }
        ],
        "languages": [
            {
                "id": "tcl",
                "aliases": [
                    "Tcl",
                    "tcl"
                ],
                "extensions": [".tcl", ".tm", ".test"]
            },
            {
                "id": "sdc",
                "aliases": [
                  "Synopsys Design Constraints"
                ],
                "extensions": [".sdc"]
            },
            {
                "id": "xdc",
                "aliases": [
                  "Xilinx Design Constraints"
                ],
                "extensions": [".xdc"]
            },
            {
                "id": "upf",
                "aliases": [
                    "UPF",
                    "upf",
                    "Universal Power Format"
                ],
                "extensions": [".upf"]
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "fs-extra": "^11.2.0",
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/node": "16.x",
        "@types/vscode": "1.78.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^9.22.0",
        "glob": "^11.0.1",
        "prettier": "^3.1.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.3",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1"
    }
}
